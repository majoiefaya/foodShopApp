{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}
{% block class %} sub_page {% endblock %}

{% block ListMenu %}
   <div class="heading_container heading_center">
        <h2>
          Liste des Categories
        </h2>
        <a href="{{ path('AjouterCategorie') }}" class="btn btn-dark">Ajouter</a>
    </div>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.libelle }}</td>
                <td>
                    <a href="{{ path('InfosCategorie', {'id': categorie.id}) }}"  class="btn btn-warning">Afficher</a>
                    <a href="{{ path('ModifierCategorie', {'id': categorie.id}) }}" class="btn btn-warning">Modifier</a>
                    <a href="{{ path('SupprimerCategorie', {'id': categorie.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune Categorie n a encore été ajoutée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
